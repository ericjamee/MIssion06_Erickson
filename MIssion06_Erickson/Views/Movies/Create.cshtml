@model MIssion06_Erickson.Models.Movie

<h2>Add a New Movie</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Title</label>
        <input asp-for="Title" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Category</label>
        <input asp-for="Category" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Director</label>
        <input asp-for="Director" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Year</label>
        <input asp-for="Year" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Rating</label>
        <select asp-for="Rating" class="form-control" required>
            <option value="">Select Rating</option>
            <option>G</option>
            <option>PG</option>
            <option>PG-13</option>
            <option>R</option>
        </select>
    </div>
    <div class="form-group">
        <label>Edited</label>
        <select asp-for="Edited" class="form-control">
            <option value="">Select</option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>
    <div class="form-group">
        <label>Lent To</label>
        <input asp-for="LentTo" class="form-control" />
    </div>
    <div class="form-group">
        <label>Notes</label>
        <input asp-for="Notes" class="form-control" maxlength="25" />
    </div>
    <br />
    <br />
    <br />
    <button type="submit" class="btn btn-success">Save</button>
</form>
