@model IEnumerable<MIssion06_Erickson.Models.Movie>

<h2>The Joel Hilton Film Collection</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Add New Movie</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Category</th>
            <th>Director</th>
            <th>Year</th>
            <th>Rating</th>
            <th>Edited</th>
            <th>Lent To</th>
            <th>Notes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Title</td>
                <td>@movie.Category</td>
                <td>@movie.Director</td>
                <td>@movie.Year</td>
                <td>@movie.Rating</td>
                <td>@(movie.Edited == true ? "Yes" : "No")</td>
                <td>@movie.LentTo</td>
                <td>@movie.Notes</td>
            </tr>
        }
    </tbody>
</table>
